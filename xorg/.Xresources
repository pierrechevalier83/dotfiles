! Xft font settings - used by urxvt
xft.dpi:180
Xft.antialias: true
Xft.rgba: rgb
Xft.hinting: true
Xft.hintstyle: hintslight
URxvt.intensityStyles: false
URxvt.shading:       40

! Copy/pasting
URxvt.scrollBar:          0
URxvt.iconFile:           /usr/share/pixmaps/urxvt.svg

URxvt.font: xft:Tamsyn:pixelsize=20:Regular
URxvt.boldFont: xft:Tamsyn:pixelsize=18:Bold
URxvt.italicFont: xft:Tamsyn:pixelsize=18:Italic
URxvt.boldItalicFont: xft:Tamsyn:pixelsize=18:Bold:Italic
URxvt.letterSpace: -1

URxvt.loginShell:         1
URxvt.saveLines:          1024

URxvt.iso14755:           0
URxvt.iso14755_52:        0

URxvt.perl-ext-common:    default, clipboard
URxvt.perl-ext:

URxvt.tabbed.tabbar-bg:   0
URxvt.tabbed.tabbar-fg:   4
URxvt.tabbed.tab-bg:      0
URxvt.tabbed.tab-fg:      1

